<style>
  .travelpage {
    display: flex;
    background-color: #b3d1ff;
  }

  .subtravelpage1 {
    flex: 1;
    height: 80vh;
    margin: 2rem;
    box-sizing: border-box;
    border-radius: 20px;
  }

  .subtravelpage2 {
    flex: 1;
    display: flex;
    align-items: center; /* Align items vertically */
    padding: 2rem;
    background-color: #b3d1ff;
  }

  .map-container {
    background: #C8DCFF;
    padding: 2rem;
    margin: 2rem 0;
    border-radius: 8px;
    width: 80%; /* Limit the width of the container */
    max-width: 600px; /* Set a max-width if needed */
    margin: auto; /* Center the container */
  }


  /* Add other styles as needed to match the mockup */
</style>

<% @phase = current_user&.phase || 1 %>
<%= render "shared/navbar" %>
<% if @phase == 1 %>
  <div class="travelpage">
    <div class="subtravelpage1 w-100">
      <!-- Bootstrap Carousel -->
      <div id="ci" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active" data-bs-interval="1000">
            <%= image_tag('liv.png', class: 'd-block w-100', alt: 'First slide', style: "border-radius: 20px;") %>
          </div>
          <div class="carousel-item" data-bs-interval="1000">
            <%= image_tag('math.png', class: 'd-block w-100', alt: 'Second slide', style: "border-radius: 20px;") %>
          </div>
        </div>
        <!-- Removed the manual controls (prev and next) -->
      </div>
    </div>
    <div class="subtravelpage2">
      <div class="map-container">
    <!-- Display the "thank you" message -->
          <div class="map text-center", style="width: 100%; height: 600px;"
                data-controller="map"
                data-map-markers-value="<%= @markers.to_json %>"
                data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">

          </div>
      </div>
    </div>
  </div>
<% end %>