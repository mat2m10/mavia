<script>
function toggleMenu() {
  var nav = document.querySelector('.navbar-collapse'); // Adjusted to target .navbar-collapse
  if (nav.style.display === "block") {
    nav.style.display = "none";
  } else {
    nav.style.display = "block";
  }
}
</script>