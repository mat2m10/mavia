<div class="container">
  <h2>Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label_html: { class: "sr-only" }, # Hide the label for screen readers
                  wrapper_html: { class: "form-group" }, # Bootstrap form-group class
                  input_html: { class: "form-control", placeholder: "Email" } # Bootstrap form-control class
      %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  label_html: { class: "sr-only" }, # Hide the label for screen readers
                  wrapper_html: { class: "form-group" }, # Bootstrap form-group class
                  input_html: { class: "form-control", placeholder: "Password" } # Bootstrap form-control class
      %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>
